<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- Configure the Jersey ServletContainer for JAX-RS RESTful services -->
    <!-- This servlet acts as the entry point for all the REST API calls. -->
    <servlet>
        <servlet-name>JerseyRESTService</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jakarta.ws.rs.Application</param-name>
            <param-value>com.patelhardware.config.ApplicationConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup> 
    </servlet>
    <servlet-mapping>
        <servlet-name>JerseyRESTService</servlet-name>
        <url-pattern>/api/*</url-pattern> 
    </servlet-mapping>
    <!-- Login Servlet: Handles user login requests -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- Registration Servlet: Handles new user registration requests -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- Main/Home Servlet: Directs to the application's main/home page -->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
        <url-pattern>/home</url-pattern> 
    </servlet-mapping>
    <!-- View All Items Servlet: Displays a list of all available items -->
    <servlet>
        <servlet-name>ViewAllServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.ViewAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAllServlet</servlet-name>
        <url-pattern>/view-all-items</url-pattern>
    </servlet-mapping>
    <!-- Buy Items Servlet: Handles the logic for adding items to the cart -->
    <servlet>
        <servlet-name>BuyItemsServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.BuyItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyItemsServlet</servlet-name>
        <url-pattern>/buy-item</url-pattern>
    </servlet-mapping>
    <!-- View Cart Items Servlet: Displays the contents of the user's shopping cart -->
    <servlet>
        <servlet-name>ViewCartItemsServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.ViewCartItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCartItemsServlet</servlet-name>
        <url-pattern>/view-cart</url-pattern>
    </servlet-mapping>
    <!-- Search Items Servlet: Handles searching for items by name or description -->
    <servlet>
        <servlet-name>SearchItemsServlet</servlet-name>
        <servlet-class>com.patelhardware.servlets.SearchItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchItemsServlet</servlet-name>
        <url-pattern>/search-items</url-pattern>
    </servlet-mapping>
    <!-- Welcome File List: Defines the default pages the server should look for -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file> 
    </welcome-file-list>
</web-app>